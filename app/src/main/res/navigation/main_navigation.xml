<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/login_page_fragment"
    android:id="@+id/main_navigation">

    <fragment
        android:id="@+id/login_page_fragment"
        android:name="com.ihrsachin.apostle.screens.login_page.LoginPageFragment"
        android:label="login_page_fragment"
        tools:layout="@layout/login_page_fragment">
        <action
            android:id="@+id/action_login_page_fragment_to_home_page_fragment"
            app:destination="@id/home_page_fragment" />
    </fragment>

    <fragment
        android:id="@+id/home_page_fragment"
        android:name="com.ihrsachin.apostle.screens.homepage.HomePageFragment"
        android:label="home_page_fragment"
        tools:layout="@layout/home_page_fragment">
        <action
            android:id="@+id/action_home_page_fragment_to_fee_fragment"
            app:destination="@id/fee_fragment" />
        <action
            android:id="@+id/action_home_page_fragment_to_profile_fragment"
            app:destination="@id/profile_fragment" />
        <action
            android:id="@+id/action_home_page_fragment_to_attendance_n_holiday_parent_fragment"
            app:destination="@id/attendance_n_holiday_parent_fragment" />
        <action
            android:id="@+id/action_home_page_fragment_to_time_table_fragment"
            app:destination="@id/time_table_fragment" />
        <action
            android:id="@+id/action_home_page_fragment_to_gallery_fragment"
            app:destination="@id/gallery_fragment" />
        <action
            android:id="@+id/action_home_page_fragment_to_result_fragment"
            app:destination="@id/result_fragment" />
        <action
            android:id="@+id/action_home_page_fragment_to_change_password_fragment"
            app:destination="@id/change_password_fragment" />
        <action
            android:id="@+id/action_home_page_fragment_to_login_page_fragment"
            app:destination="@id/login_page_fragment" />
        <action
            android:id="@+id/action_home_page_fragment_to_date_sheet_fragment"
            app:destination="@id/date_sheet_fragment" />
        <action
            android:id="@+id/action_home_page_fragment_to_holidays_fragment"
            app:destination="@id/holidays_fragment" />
        <action
            android:id="@+id/action_home_page_fragment_to_quiz_fragment"
            app:destination="@id/quiz_fragment" />
        <action
            android:id="@+id/action_home_page_fragment_to_doubt_fragment"
            app:destination="@id/doubt_fragment" />
        <action
            android:id="@+id/action_home_page_fragment_to_leave_application_fragment"
            app:destination="@id/leave_application_fragment" />
        <action
            android:id="@+id/action_home_page_fragment_to_event_fragment"
            app:destination="@id/event_fragment" />
    </fragment>


    <fragment
        android:id="@+id/change_password_fragment"
        android:name="com.ihrsachin.apostle.screens.change_password.ChangePasswordFragment"
        android:label="@string/change_password"
        tools:layout="@layout/change_password_fragment">
        <action
            android:id="@+id/action_change_password_fragment_to_login_page_fragment"
            app:destination="@id/login_page_fragment" />
    </fragment>

    <fragment
        android:id="@+id/result_fragment"
        android:name="com.ihrsachin.apostle.screens.result.ResultFragment"
        android:label="result_fragment"
        tools:layout="@layout/result_fragment"/>

    <fragment
        android:id="@+id/gallery_fragment"
        android:name="com.ihrsachin.apostle.screens.gallery.GalleryFragment"
        android:label="gallery_fragment"
        tools:layout="@layout/gallery_fragment"/>

    <fragment
        android:id="@+id/time_table_fragment"
        android:name="com.ihrsachin.apostle.screens.time_table.TimeTableFragment"
        android:label="time_table_fragment"
        tools:layout="@layout/time_table_fragment">
    </fragment>

    <fragment
        android:id="@+id/fee_fragment"
        android:name="com.ihrsachin.apostle.screens.fee.FeeFragment"
        android:label="fee_fragment"
        tools:layout="@layout/fee_fragment">
    </fragment>

    <fragment
        android:id="@+id/profile_fragment"
        android:name="com.ihrsachin.apostle.screens.profile.ProfileFragment"
        android:label="profile_fragment"
        tools:layout="@layout/profile_fragment">
    </fragment>


    <fragment
        android:id="@+id/attendance_n_holiday_parent_fragment"
        android:name="com.ihrsachin.apostle.screens.attendance.AnHParentFragment"
        android:label="attendance_n_holiday_parent_fragment"
        tools:layout="@layout/attendance_n_holiday_parent_fragment">
    </fragment>

    <fragment
        android:id="@+id/date_sheet_fragment"
        android:name="com.ihrsachin.apostle.screens.date_sheet.DateSheetFragment"
        android:label="DateSheet Fragment"
        tools:layout="@layout/date_sheet_fragment"/>

    <fragment
        android:id="@+id/holidays_fragment"
        android:name="com.ihrsachin.apostle.screens.attendance.HolidaysFragment"
        android:label="Holidays Fragment"
        tools:layout="@layout/holidays_fragment"/>

    <fragment
        android:id="@+id/quiz_fragment"
        android:name="com.ihrsachin.apostle.screens.quiz.QuizFragment"
        android:label="quiz_fragment"
        tools:layout="@layout/quiz_fragment"/>

    <fragment
        android:id="@+id/doubt_fragment"
        android:name="com.ihrsachin.apostle.screens.doubt.DoubtFragment"
        android:label="doubt_fragment"
        tools:layout="@layout/doubt_fragment"/>

    <fragment
        android:id="@+id/leave_application_fragment"
        android:name="com.ihrsachin.apostle.screens.leave_application.LeaveApplicationFragment"
        tools:layout="@layout/leave_application_fragment"
        android:label="leave_application_fragment"/>

    <fragment
        android:id="@+id/event_fragment"
        android:name="com.ihrsachin.apostle.screens.event.EventFragment"
        android:label="event_fragment"
        tools:layout="@layout/event_fragment"/>

</navigation>