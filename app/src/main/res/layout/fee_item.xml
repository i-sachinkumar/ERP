<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/halfwayGuideline"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


    <TextView
        android:id="@+id/fee_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Type"
        android:textColor="@color/time_table_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/halfwayGuideline"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/fee_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="4000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/halfwayGuideline"
        app:layout_constraintTop_toTopOf="@+id/fee_type"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        android:layout_marginHorizontal="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/theme_gray"
        app:layout_constraintTop_toBottomOf="@+id/fee_type"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>