<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/date_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/date_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JAN"
        app:layout_constraintStart_toStartOf="@+id/date_day"
        app:layout_constraintEnd_toEndOf="@+id/date_day"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/date_day"/>


    <View
        android:layout_width="0dp"
        android:layout_height="0.6dp"
        app:layout_constraintStart_toEndOf="@+id/date_day"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/theme_gray"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/date_day"
        android:layout_marginHorizontal="20dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0.6dp"
        app:layout_constraintStart_toEndOf="@+id/date_day"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/theme_gray"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/date_month"
        android:layout_marginHorizontal="20dp"/>


    <TextView
        android:id="@+id/subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English"
        android:textSize="20sp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@id/date_day"
        app:layout_constraintTop_toTopOf="@+id/date_day"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/date_week_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday"
        android:textColor="@color/time_table_gray"
        app:layout_constraintStart_toStartOf="@+id/subject"
        app:layout_constraintTop_toBottomOf="@+id/subject"
        android:layout_marginTop="5dp"/>


    <TextView
        android:id="@+id/timing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09:30 AM - 12:30 PM"
        app:layout_constraintTop_toTopOf="@+id/subject"
        app:layout_constraintBottom_toBottomOf="@+id/date_week_day"
        android:gravity="center_vertical"
        android:textColor="@color/time_table_gray"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>